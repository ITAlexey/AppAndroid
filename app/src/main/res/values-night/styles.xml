<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SimpleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="imageButtonStyle">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NumbersForPinCode" parent="SimpleApp">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/tv_pin_nbr</item>
        <item name="android:layout_marginTop">@dimen/rv_elem_keyboard_margin</item>
        <item name="android:layout_marginBottom">@dimen/rv_elem_keyboard_margin</item>
        <item name="android:layout_width">@dimen/view_default_size</item>
        <item name="android:layout_height">@dimen/view_default_size</item>
    </style>

    <style name="TextView.Title" parent="SimpleApp">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/main_button_padding</item>
    </style>
</resources>