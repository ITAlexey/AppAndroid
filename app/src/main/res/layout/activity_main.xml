<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:text="RU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:text="Input pin code"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <LinearLayout
        android:id="@+id/activity_main__field_of_dots"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/activity_main__dot1"
            style="@style/DotsInCheckField"
            android:background="@drawable/pincode_dot" />

        <TextView
            android:id="@+id/activity_main__dot2"
            style="@style/DotsInCheckField"
            android:background="@drawable/pincode_dot"/>

        <TextView
            android:id="@+id/activity_main__dot3"
            style="@style/DotsInCheckField"
            android:background="@drawable/pincode_dot"/>

        <TextView
            android:id="@+id/activity_main__dot4"
            style="@style/DotsInCheckField"
            android:background="@drawable/pincode_dot"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main__field_of_dots">

        <TextView
            android:id="@+id/activity_main__number1"
            style="@style/NumbersForPinCode"
            android:layout_alignParentLeft="true"
            android:text="1" />

        <TextView
            android:id="@+id/activity_main__number2"
            style="@style/NumbersForPinCode"
            android:layout_centerHorizontal="true"
            android:text="2" />

        <TextView
            android:id="@+id/activity_main__number3"
            style="@style/NumbersForPinCode"
            android:layout_alignParentRight="true"
            android:text="3" />

        <TextView
            android:id="@+id/activity_main__number4"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number1"
            android:layout_alignParentLeft="true"
            android:text="4" />

        <TextView
            android:id="@+id/activity_main__number5"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number1"
            android:layout_centerHorizontal="true"
            android:text="5" />

        <TextView
            android:id="@+id/activity_main__number6"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number1"
            android:layout_alignParentRight="true"
            android:text="6" />

        <TextView
            android:id="@+id/activity_main__number7"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number4"
            android:layout_alignParentLeft="true"
            android:text="7" />

        <TextView
            android:id="@+id/activity_main__number8"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number4"
            android:layout_centerHorizontal="true"
            android:text="8" />

        <TextView
            android:id="@+id/activity_main__number9"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number4"
            android:layout_alignParentRight="true"
            android:text="9" />

        <TextView
            android:id="@+id/activity_main__number0"
            style="@style/NumbersForPinCode"
            android:layout_below="@id/activity_main__number8"
            android:layout_centerHorizontal="true"
            android:text="0" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="Set up pin code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>