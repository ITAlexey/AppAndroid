<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPinCode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/main_margin"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:itemCount="4"
        tools:listitem="@layout/item_rv_pin" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conLNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvPinCode">

        <TextView
            android:id="@+id/tvNumber1"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumber2"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_2"
            app:layout_constraintEnd_toStartOf="@+id/tvNumber3"
            app:layout_constraintStart_toEndOf="@+id/tvNumber1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumber3"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumber4"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber1" />

        <TextView
            android:id="@+id/tvNumber5"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_5"
            app:layout_constraintEnd_toStartOf="@+id/tvNumber6"
            app:layout_constraintStart_toEndOf="@+id/tvNumber4"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber2" />

        <TextView
            android:id="@+id/tvNumber6"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber3" />

        <TextView
            android:id="@+id/tvNumber7"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber4" />

        <TextView
            android:id="@+id/tvNumber8"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_8"
            app:layout_constraintEnd_toStartOf="@+id/tvNumber9"
            app:layout_constraintStart_toEndOf="@+id/tvNumber7"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber5" />

        <TextView
            android:id="@+id/tvNumber9"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber6" />

        <TextView
            android:id="@+id/tvNumber0"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgBackSpace"
            app:layout_constraintStart_toEndOf="@+id/imgFingerprint"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber8" />

        <ImageView
            android:id="@+id/imgFingerprint"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/img_pin_margin"
            android:contentDescription="@string/img_fingerprint"
            android:padding="@dimen/img_pin_padding"
            android:src="@drawable/ic_fingerprint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber7" />

        <ImageView
            android:id="@+id/imgBackSpace"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/img_pin_margin"
            android:contentDescription="@string/img_backspace_sign"
            android:padding="@dimen/img_pin_padding"
            android:src="@drawable/ic_backspace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber9" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnReset"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main_background"
        android:text="@string/resetBtn"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conLNumbers" />

    <ImageView
        android:id="@+id/imgLogOut"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/img_logout"
        android:src="@drawable/ic_logout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conLNumbers" />


</androidx.constraintlayout.widget.ConstraintLayout>