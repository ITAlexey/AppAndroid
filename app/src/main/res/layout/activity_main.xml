<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin"
        android:padding="12dp"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPinCode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/main_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvNumbers"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:paddingTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvPinCode">

        <TextView
            android:id="@+id/tvNumber1"
            style="@style/NumbersForPinCode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber4"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_1" />

        <TextView
            android:id="@+id/tvNumber2"
            style="@style/NumbersForPinCode"
            app:layout_constraintLeft_toLeftOf="@+id/tvNumber1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber5"
            app:layout_constraintRight_toRightOf="@+id/tvNumber3"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_2" />

        <TextView
            android:id="@+id/tvNumber3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber6"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_3" />

        <TextView
            android:id="@+id/tvNumber4"
            style="@style/NumbersForPinCode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNumber1"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber7"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_4" />

        <TextView
            android:id="@+id/tvNumber5"
            style="@style/NumbersForPinCode"
            app:layout_constraintTop_toTopOf="@id/tvNumber2"
            app:layout_constraintLeft_toLeftOf="@id/tvNumber4"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber8"
            app:layout_constraintRight_toRightOf="@id/tvNumber6"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_5" />

        <TextView
            android:id="@+id/tvNumber6"
            style="@style/NumbersForPinCode"
            app:layout_constraintTop_toTopOf="@id/tvNumber3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber9"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_6" />

        <TextView
            android:id="@+id/tvNumber7"
            app:layout_constraintTop_toTopOf="@id/tvNumber4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgFingerPrint"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_7" />

        <TextView
            android:id="@+id/tvNumber8"
            app:layout_constraintTop_toTopOf="@id/tvNumber5"
            app:layout_constraintLeft_toLeftOf="@id/tvNumber7"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber0"
            app:layout_constraintRight_toRightOf="@id/tvNumber9"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_8" />

        <TextView
            android:id="@+id/tvNumber9"
            style="@style/NumbersForPinCode"
            app:layout_constraintTop_toTopOf="@id/tvNumber6"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            app:layout_constraintBottom_toBottomOf="@id/imgFingerPrint"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_9" />

        <TextView
            android:id="@+id/tvNumber0"
            app:layout_constraintTop_toTopOf="@id/tvNumber8"
            app:layout_constraintLeft_toLeftOf="@id/imgFingerPrint"
            app:layout_constraintRight_toRightOf="@id/imgBackSpace"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/NumbersForPinCode"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/tv_margin"
            android:text="@string/number_0" />

        <ImageView
            android:id="@+id/imgBackSpace"
            app:layout_constraintTop_toTopOf="@id/tvNumber7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/img_pin_margin"
            android:contentDescription="@string/backspace_sign"
            android:padding="@dimen/img_pin_padding"
            android:src="@drawable/ic_backspace" />

        <ImageView
            app:layout_constraintTop_toTopOf="@id/tvNumber9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imgFingerPrint"
            android:layout_width="@dimen/view_default_size"
            android:layout_height="@dimen/view_default_size"
            android:layout_margin="@dimen/img_pin_margin"
            android:contentDescription="@string/finger_print"
            android:padding="@dimen/img_pin_padding"
            android:src="@drawable/ic_finger_print" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnReset"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_tune"
        android:text="@string/resetBtn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvNumbers" />

    <ImageView
        android:id="@+id/imgLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logout"
        android:src="@drawable/ic_logout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvNumbers" />


</androidx.constraintlayout.widget.ConstraintLayout>